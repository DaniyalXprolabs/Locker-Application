<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="px-8 py-6 mt-4 text-left bg-white shadow-lg">
    <h2 class="text-black-200 font-serif text-4xl my-5 text-center"><i class="fa-solid fa-cart-shopping"></i> Cart of <%= @cart.user.username %></h2>
    <h2 class="text-black-200 font-serif text-4xl my-5 text-center">Total Number of Products: <%= @cart.cart_products.count %></h2>
      <div class="grid grid-cols-4 gap-4">
        <% @cart.cart_products.each do |cproduct| %>
          <div class="mx-3 p-6 max-w-sm bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700 my-5">
            <h1 class="text-right"><%= link_to "X", cart_product_path(cproduct), method: :delete %></h1>
            <h1>Product Name: <%= cproduct.product.name %></h1>
            <%= image_tag(cproduct.product.product_picture, alt: "rss feed", height: 600, width: 600) %>
            <h1 class="my-3">Subtotal: <%= cproduct.subtotal %></h1>
            <h1 class="my-3">Quantity: <%= cproduct.quantity %></h1>
            <%= link_to "Add +1", cart_product_add_path(:id => cproduct.id), method: :post, class:"my-3 bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded" %>
            <%= link_to "Remove -1", cart_product_remove_path(:id => cproduct.id), method: :post, class:"my-3 bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded" %>
          </div>
        <% end %>
        <br>
      </div>
    <%= link_to "Continue Shopping", root_path, class:"bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded" %>
  </div>
</div>
