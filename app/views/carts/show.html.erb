<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="px-8 py-6 mt-4 text-left bg-white shadow-lg">
    <h2 class="text-black-200 font-serif text-4xl my-5 text-center"><i class="fa-solid fa-cart-shopping"></i> Cart of <%= @cart.user.username %></h2>
    <h2 class="text-black-200 font-serif text-4xl my-5 text-center">Total Number of Products: <%= @cart.cart_products.count %></h2>
      <div class="grid grid-cols-4 gap-4">
        <% @cart.cart_products.each do |cart_product| %>
          <div class="mx-3 p-6 max-w-sm bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700 my-5">
            <h1>Product Name: <%= cart_product.product.name %></h1>
            <%= image_tag(cart_product.product.product_picture, alt: "rss feed", height: 600, width: 600) %>
          </div>
        <% end %>
        <br>
      </div>
    <%= link_to "Continue Shopping", root_path, class:"bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded" %>
  </div>
</div>