<div class="container grid place-items-center h-screen ">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2 class="text-black-200 font-serif text-4xl my-7"><%= image_tag 'Logo.png' , class: 'h-20 inline'%>Log In</h2>

    <div class="field my-5">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'rounded-md border-2 border-black my-1 py-1' %>
  </div>

  <div class="field my-5">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:'rounded-md border-2 border-black my-1 py-1' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field my-5">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in",class: 'px-6 py-2 mt-4 text-white bg-blue-600 rounded-lg hover:bg-blue-900' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>