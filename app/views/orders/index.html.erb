<h2 class="text-black-200 font-serif text-3xl my-7 mx-7"> Listing All Orders</h2>
<h2 class="text-black-200 font-serif text-3xl my-7 mx-7"> Total Number of Orders: <%= @orders.count %></h2>
<h2 class="text-black-200 font-serif text-3xl my-7 mx-7"> Number of pending orders:<%= @pending_orders %></h2>
<h2 class="text-black-200 font-serif text-3xl my-7 mx-7"> Number of delivered orders:<%= @delivered_orders %></h2>
<!--Table-->
<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
  <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
      <tr>
        <th scope="col" class="px-6 py-3">
          Order ID
        </th>
        <th scope="col" class="px-6 py-3">
          Buyer's Name
        </th>
        <th scope="col" class="px-6 py-3">
          Total
        </th>
        <th scope="col" class="px-6 py-3">
          Status
        </th>
        <th scope="col" class="px-6 py-3">
          Created At
        </th>
        <th scope="col" class="px-6 py-3">
          <span class="sr-only">Edit</span>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |o| %>
        <tr class="border-b dark:bg-gray-800 dark:border-gray-700 odd:bg-white even:bg-gray-50 odd:dark:bg-gray-800 even:dark:bg-gray-700">
          <th scope="row" class="px-6 py-4 font-medium text-gray-900 dark:text-white whitespace-nowrap">
            <%= o.id %>
          </th>
          <td class="px-6 py-4">
            <%= o.user.username %>
          </td>
          <td class="px-6 py-4">
            <%= o.total %>
          </td>
          <td class="px-6 py-4">
            <%= o.status %>
          </td>
          <td class="px-6 py-4">
            <%= o.created_at %>
          </td>
          <td class="px-6 py-4 text-right">
            <%= link_to "View Order", order_path(o), class:'font-medium text-blue-600 dark:text-blue-500 hover:underline' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
