<%= form_for(@order) do |f| %>
  <div class="field my-5">
    <%= f.label :total %><br />
    <%= f.number_field :total,  class:'rounded-md border-2 border-black my-1 py-1' %>
  </div>
  <div class="field my-5">
    <%= f.submit "Create Order", class: 'px-6 py-2 mt-4 text-white bg-blue-600 rounded-lg hover:bg-blue-900' %><br />
  </div>
<% end %>
