<h1>You are on profile page</h1>
<% if current_user.buyer? %>
  <h1><%= link_to "Become a Seller", toggle_role_page_path(current_user.id), class: 'mx-3 px-6 py-2 mt-4 text-white bg-green-600 rounded-lg hover:bg-blue-900' %></h1>
<% else %>
  <h1><%= link_to "Add a product", root_path, class: 'mx-3 px-6 py-2 mt-4 text-white bg-green-600 rounded-lg hover:bg-blue-900'  %></h1>
  <h1><%= link_to "Become a buyer", toggle_role_page_path(current_user.id), class: 'mx-3 px-6 py-2 mt-4 text-white bg-green-600 rounded-lg hover:bg-blue-900'  %></h1>
<% end %>
<%= link_to "Logout", destroy_user_session_path, method: :delete , class: 'px-6 py-2 mt-4 text-white bg-red-600 rounded-lg hover:bg-blue-900' %>
